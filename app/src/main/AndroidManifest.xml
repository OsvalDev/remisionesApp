<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/carnival_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/carnival_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.RemissionApp.NoActionBar"
        tools:targetApi="31" >

        <activity
            android:name=".framework.views.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.RemissionApp.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />

        </activity>

        <activity
            android:name=".framework.views.activities.DashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.RemissionApp.NoActionBar"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".framework.views.activities.RemissionDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.RemissionApp.NoActionBar"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".framework.views.activities.PaymentActivity"
            android:exported="true"
            android:theme="@style/Theme.RemissionApp.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".framework.views.activities.NoteActivity"
            android:exported="true"
            android:theme="@style/Theme.RemissionApp.NoActionBar"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".framework.views.activities.PrivatenoteActivity"
            android:exported="true"
            android:theme="@style/Theme.RemissionApp.NoActionBar"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>